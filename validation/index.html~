<html>
<title>Validation</title>
<head>
  <script type="text/javascript" src="jquery.min.js"></script>
  <script type="text/javascript" src="validation.js"></script>
</head>

<form id="myForm" onsubmit="return false;">
	<table width="100%">
		<tbody>
			<tr>
				<td>
					name
				</td>
				<td>
					<input type="text" valid="name"></input>
				</td>
			</tr>
			<tr>
				<td>
					E-mail
				</td>
				<td>
					<input type="text" valid="email"></input>
				</td>
			</tr>
			<tr>
				<td>
					E-mail2
				</td>
				<td>
					<input type="text" valid="email"></input>
				</td>
			</tr>
			<tr>
				<td>
					password
				</td>
				<td>
					<input type="text" valid="password"></input>
				</td>
			</tr>
			<tr>
				<td>
					Number
				</td>
				<td>
					<input type="text" valid="numeric"></input>
				</td>
			</tr>
			<tr>
				<td>
					Date
				</td>
				<td>
					<input type="text" valid="date"></input>
				</td>
			</tr>
			<tr>
				<td>
					&nbsp;
				</td>
				<td>
					<button name="submit">Click me</button>
				</td>
			</tr>
		</tbody>
	</table>
</form>

<script type="text/javascript">
  $(function(){
	$('#myForm button[name="submit"]').live("click", function()
	{
		$("#myForm").validation({
			rules:{
				email:	true,
				numeric: true,
				date: 	true,
			},
			messages:{
				email:	"Please enter valid email address!",
				numeric: "Please enter number only!",
				date: "Invalid date format!"
			},
			success: function(invalid) {
				console.log(invalid)
			}
		});
	});		
  });
</script>

